<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.mah.da401a_assignment_2.GroupFragment">

    <EditText
        android:id="@+id/fragment_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add new group"/>

    <Button
        android:id="@+id/fragment_group_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_group_name"
        android:text="Create new group"/>

    <ListView
        android:id="@+id/fragment_group_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_group_create"/>

</RelativeLayout>
